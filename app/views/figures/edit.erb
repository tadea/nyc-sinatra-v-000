<form class="" action="/figures/<%= @figure.id %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <p>Name:</p>
  <input type="text" name="figure[name]" value="<%= @figure.name %>" id="figure_name">
  <p>Title:</p>
  <% @titles.each do |title| %>
    <input type="checkbox" name="figure[title_ids][]" value="<%= title.id %>" id="<%= title.id %>" <%='checked' if @figure.titles.include?(title) %>><%= title.name %></input>
  <% end %>
  <p>New Title:</p>
  <input type="text" name="title[name]" value="" id="new_title">
  <p>Landmarks:</p>
  <% @landmarks.each do |landmark| %>
    <input type="checkbox" name="figure[landmark_ids][]" value="<%= landmark.id %>" id="<%= landmark.id %>" <%='checked' if @figure.landmarks.include?(landmark) %>><%= landmark.name %></input>
  <% end %>
  <p>New Landmark:</p>
  <input type="text" name="landmark[name]" value="" id="new_landmark">
  <input type="text" name="landmark[year]" value="">
  <input type="submit" name="" value="Edit Figure" id="Edit Figure">
</form>
